<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



        <TextView
            android:id="@+id/appR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/app_r"
            android:textColor="@color/huise"
            android:textSize="25sp"
            android:layout_marginTop="64dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/register_account"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:hint="@string/AccountH"

            android:inputType="textPersonName"
            android:layout_below="@+id/appR"
            android:layout_alignStart="@+id/password" />

        <EditText
            android:id="@+id/register_email"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:drawableStart="@android:drawable/sym_action_email"
            android:drawableTint="@color/huise"
            android:ems="10"
            android:hint="@string/Eamil"
            android:layout_below="@+id/register_account"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/register_pwd"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:drawableStart="@android:drawable/ic_lock_idle_lock"
            android:drawableTint="@color/huise"
            android:ems="10"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:layout_below="@+id/register_email"
            android:layout_alignParentStart="true" />




        <Button
            android:id="@+id/Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="@string/app_r"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_below="@+id/register_pwd"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/back"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textIsSelectable="true"
            android:text="@string/back"
            android:textColor="@color/huilan"
            android:background="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/Register"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
