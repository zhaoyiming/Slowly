<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_play1"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:padding="10dp"
            android:src="@mipmap/close"
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <info.abdolahi.CircularMusicProgressBar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/album_art"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/zhuanzhu"
            app:border_color="#00796B"
            app:border_width="2dp"
            app:centercircle_diammterer="1"
            app:draw_anticlockwise="false"

            app:progress_color="#80CBC4"
            app:progress_startAngle="-90" />
        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="182dp"
            android:layout_marginTop="150dp"
            android:id="@+id/stime"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <com.freedom.lauzy.playpauseviewlib.PlayPauseView
            android:id="@+id/pausebutton"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView

            android:id="@+id/playmusic"
            android:layout_width="80dp"
            android:layout_height="35dp"

            android:layout_marginLeft="169dp"
            android:layout_marginTop="400dp"
            android:background="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="开始专注" />
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_marginBottom="10dp"
            android:textSize="22dp"
            android:layout_above="@+id/recycle_1"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:text="选择白噪音"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView

            android:layout_alignParentBottom="true"
            android:id="@+id/recycle_1"
            android:layout_width="match_parent"
            android:layout_height="120dp">

        </android.support.v7.widget.RecyclerView>

</RelativeLayout>
