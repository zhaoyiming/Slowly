<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_play3"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:padding="20dp"
        android:src="@mipmap/close"
        android:id="@+id/close2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <info.abdolahi.CircularMusicProgressBar xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/album_art2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/breath"
        app:border_color="#00796B"
        app:border_width="2dp"
        app:centercircle_diammterer="1"
        app:draw_anticlockwise="false"

        app:progress_color="#80CBC4"
        app:progress_startAngle="-90" />
    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="190dp"
        android:id="@+id/stime2"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />
    <com.freedom.lauzy.playpauseviewlib.PlayPauseView
        android:layout_width="wrap_content"
        android:id="@+id/pausebutton2"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="230dp"
        android:id="@+id/huxistate"
        android:text="Ready！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView

        android:id="@+id/playmusic2"
        android:layout_width="80dp"
        android:layout_height="35dp"

        android:layout_marginLeft="163dp"
        android:layout_marginTop="360dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="开始放松" />
    </android.support.v7.widget.CardView>
    <TextView
        android:textColor="#FFFFFF"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="420dp"
        android:text="根据4-7-8呼吸法随引导吸气屏息呼气"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:layout_marginBottom="10dp"
        android:textSize="22dp"
        android:layout_above="@+id/recycle_3"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:visibility="invisible"

        android:layout_alignParentBottom="true"
        android:id="@+id/recycle_3"
        android:layout_width="match_parent"
        android:layout_height="120dp">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
